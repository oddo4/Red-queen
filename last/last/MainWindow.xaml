<Window x:Class="last.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:last"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Canvas Background="#FF211A1A">
        <Label x:Name="score" Content="0" Foreground="White" Panel.ZIndex="10" FontSize="30"/>
        <Grid x:Name="rect" Canvas.Top="0" Canvas.Left="0" Background="Blue" Height="80" Width="120" MouseLeftButtonDown="Rect_MouseLeftButtonDown">
            <Label x:Name="dvd" Content="DVD" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="40"/>
        </Grid>
    </Canvas>
</Window>
